datalist = []
taglist = []
endtaglist = []

class MyHTMLParser(HTMLParser):

    def handle_data(self, data):
        datalist.append(data)

    def handlestart_tag(self, tag, attrs):
        for attr in attrs:
            taglist.append(attr)

    def handleend_tag(self, tag):
        endtaglist.append(tag)


